{{template "base" .}}

{{define "content"}}
<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h1 class="mt-5">Search for Availability</h1>

      <form action="" method="get" novalidate class="needs-validation">
        <div class="row">
          <div class="col">
            <div class="mb-3">
              <label for="start_date" class="form-label">Starting Date</label>
              <input
                required
                type="date"
                class="form-control"
                id="start_date"
                name="start_date"
                aria-describedby="startDateHelp"
              />
              <div id="startHelp" class="form-text">
                Enter your starting date in the form of YYYY-MM-DD
              </div>
            </div>
          </div>
          <div class="col">
            <div class="mb-3">
              <label for="ending_date" class="form-label">Ending Date</label>
              <input
                required
                type="date"
                class="form-control"
                id="ending_date"
                name="ending_date"
                aria-describedby="endDateHelp"
              />
              <div id="endHelp" class="form-text">
                Enter your ending date in the form of YYYY-MM-DD
              </div>
            </div>
          </div>
        </div>

        <button type="submit" class="btn btn-primary">
          Search Availability
        </button>
      </form>
    </div>
  </div>
</div>
{{ end }}
{{define "js" }}

<script>
  const elem = document.getElementById("reservation-dates");
  const rangePicker = new DateRangePicker(elem, {
    format: "yyyy-mm-dd",
  });
</script>
{{ end }}
